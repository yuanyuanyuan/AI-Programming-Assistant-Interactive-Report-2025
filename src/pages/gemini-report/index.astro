                { id: 'pearai', name: 'Roo Code / PearAI', form_factor: 'plugin', role: ['individual'], priority: ['open_source'], differentiator: '开源自主智能体 (Roo)，模型路由 (PearAI)', pricing: '免费 (Roo, BYOK) / $15/月 (PearAI)', open_source: true, ratings: { ease_of_use: 3, quality: 3, agent_power: 4, security: 4, cost_effective: 4 }, pros: ['完全开源，高度可定制（Roo）', '创新的模型路由功能（PearAI）', '定价相对明确（PearAI）'], cons: ['Token消耗量巨大，潜在成本高（Roo）', '学习曲线陡峭（Roo）', '许多核心功能仍在开发中（PearAI）'] },
                { id: 'copilot', name: 'GitHub Copilot', form_factor: 'plugin', role: ['enterprise', 'startup', 'individual'], priority: ['security'], differentiator: '深度集成GitHub生态，市场领导者，稳定', pricing: '$10/月 起', open_source: false, ratings: { ease_of_use: 5, quality: 4, agent_power: 3, security: 5, cost_effective: 4 }, pros: ['与GitHub和VS Code生态无与伦比的深度集成', '市场领导者，产品成熟稳定', '易用性极高，学习曲线平缓'], cons: ['模型选择灵活性不足', '处理复杂代码时质量可能不如专注工具', '功能集成深度受限于插件API'] },
                { id: 'augmentcode', name: 'Augment Code', form_factor: 'plugin', role: ['enterprise', 'startup'], priority: ['agent_power', 'security'], differentiator: '强大的远程智能体，擅长复杂重构和大型代码库', pricing: '$50/月 起', open_source: false, ratings: { ease_of_use: 3, quality: 5, agent_power: 5, security: 5, cost_effective: 2 }, pros: ['处理复杂重构和大型代码库表现卓越', '强大的智能体能阅读文档、编写测试', '领先的安全与合规认证'], cons: ['定价较高，门槛高', '学习曲线较陡，需要掌握高级提示技巧', '缺乏让用户自由选择模型的灵活性'] },
                { id: 'claudecode', name: 'Claude Code', form_factor: 'cli', role: ['cli_user'], priority: ['agent_power'], differentiator: '终端原生体验，强大的Git工作流和代码分析', pricing: '$17/月 起', open_source: true, ratings: { ease_of_use: 2, quality: 5, agent_power: 5, security: 4, cost_effective: 3 }, pros: ['顶级的终端AI编码体验', '自主任务执行、代码质量和token效率高', '强大的Git工作流处理能力'], cons: ['纯终端界面，学习曲线陡峭', '不擅长处理视觉或UI相关任务', '定价相对较高'] },
                { id: 'geminicli', name: 'Gemini CLI', form_factor: 'cli', role: ['cli_user', 'individual'], priority: ['cost_effective', 'open_source'], differentiator: '极慷慨的免费额度，巨大的上下文窗口', pricing: '免费（1000次/天）', open_source: true, ratings: { ease_of_use: 3, quality: 3, agent_power: 3, security: 4, cost_effective: 5 }, pros: ['业界最慷慨的免费使用额度', '可免费使用强大的Gemini 2.5 Pro模型', '开源，与Google Cloud生态集成'], cons: ['作为编码智能体的实际表现落后于竞品', '用户体验较为粗糙，存在bug', '执行复杂任务时可靠性不高'] },
            ];

            let currentFilters = {
                role: 'all',
                priority: 'all',
                form_factor: 'all'
            };
            
            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                return Array.isArray(label) ? label.join(' ') : label;
            };

            const commonChartOptions = {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        labels: {
                            color: '#44403C',
                            font: { family: "'Noto Sans SC', sans-serif" }
                        }
                    },
                    tooltip: {
                        callbacks: { title: tooltipTitleCallback }
                    }
                }
            };

            function renderTools() {
                const grid = document.getElementById('tool-grid');
                grid.innerHTML = '';
                let count = 0;
                toolsData.forEach(tool => {
                    const roleMatch = currentFilters.role === 'all' || tool.role.includes(currentFilters.role);
                    const priorityMatch = currentFilters.priority === 'all' || tool.priority.includes(currentFilters.priority);
                    const formFactorMatch = currentFilters.form_factor === 'all' || tool.form_factor === currentFilters.form_factor;

                    if (roleMatch && priorityMatch && formFactorMatch) {
                        count++;
                        const card = document.createElement('div');
                        card.className = 'bg-white rounded-lg shadow-md p-6 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300 cursor-pointer';
                        card.dataset.toolId = tool.id;
                        card.innerHTML = `
                            <div>
                                <div class="flex justify-between items-start">
                                    <h3 class="text-xl font-bold text-stone-800">${tool.name}</h3>
                                    <span class="text-xs font-semibold ${tool.open_source ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'} py-1 px-2 rounded-full">${tool.open_source ? '开源' : '闭源'}</span>
                                </div>
                                <p class="text-stone-500 mt-2 text-sm">${tool.differentiator}</p>
                            </div>
                            <div class="mt-4 pt-4 border-t border-stone-200">
                                <p class="text-sm text-stone-600 font-semibold">${tool.pricing}</p>
                            </div>
                        `;
                        grid.appendChild(card);
                    }
                });
                document.getElementById('results-count').textContent = count;
            }

            function setupFilters() {
                const filterContainer = document.getElementById('filters');
                filterContainer.addEventListener('click', e => {
                    if (e.target.tagName === 'BUTTON') {
                        const group = e.target.parentElement.dataset.filterGroup;
                        const value = e.target.dataset.filter;
                        
                        if (group && value) {
                            currentFilters[group] = value;
                            
                            document.querySelectorAll(`[data-filter-group="${group}"] button`).forEach(btn => {
                                btn.classList.remove('active');
                            });
                            e.target.classList.add('active');
                            
                            renderTools();
                        }
                    }
                });
            }
            
            let modalRadarChart = null;

            function showToolModal(toolId) {
                const tool = toolsData.find(t => t.id === toolId);
                if (!tool) return;

                document.getElementById('modal-title').textContent = tool.name;
                const contentEl = document.getElementById('modal-content');
                
                const prosList = tool.pros.map(p => `<li class="flex items-start"><span class="text-green-500 mr-2 mt-1">✓</span><span>${p}</span></li>`).join('');
                const consList = tool.cons.map(c => `<li class="flex items-start"><span class="text-red-500 mr-2 mt-1">✗</span><span>${c}</span></li>`).join('');
                
                contentEl.innerHTML = `
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <div>
                            <h4 class="font-bold text-lg mb-2 text-stone-700">核心优势</h4>
                            <ul class="space-y-1 text-stone-600 list-inside">${prosList}</ul>
                            <h4 class="font-bold text-lg mt-4 mb-2 text-stone-700">潜在劣势</h4>
                            <ul class="space-y-1 text-stone-600 list-inside">${consList}</ul>
                        </div>
                        <div>
                            <h4 class="font-bold text-lg mb-2 text-stone-700 text-center">能力雷达图</h4>
                            <div class="chart-container h-72">
                                <canvas id="modalRadarChart"></canvas>
                            </div>
                        </div>
                    </div>
                `;
                
                document.getElementById('tool-modal').classList.remove('hidden');
                document.getElementById('tool-modal').classList.add('flex');

                const radarCtx = document.getElementById('modalRadarChart').getContext('2d');
                if(modalRadarChart) {
                    modalRadarChart.destroy();
                }
                modalRadarChart = new Chart(radarCtx, {
                    type: 'radar',
                    data: {
                        labels: ['易用性', '编码质量', '智能体能力', '企业安全', '成本效益'],
                        datasets: [{
                            label: tool.name,
                            data: Object.values(tool.ratings),
                            backgroundColor: 'rgba(251, 191, 36, 0.2)',
                            borderColor: 'rgba(251, 191, 36, 1)',
                            pointBackgroundColor: 'rgba(251, 191, 36, 1)',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: 'rgba(251, 191, 36, 1)'
                        }]
                    },
                    options: {
                        ...commonChartOptions,
                        scales: {
                            r: {
                                angleLines: { color: '#E7E5E4' },
                                grid: { color: '#E7E5E4' },
                                pointLabels: { color: '#44403C', font: { weight: 'bold', family: "'Noto Sans SC', sans-serif" } },
                                ticks: {
                                    color: '#78716C',
                                    backdropColor: 'rgba(255, 255, 255, 0.75)'
                                },
                                suggestedMin: 0,
                                suggestedMax: 5
                            }
                        }
                    }
                });
            }
            
            function setupModal() {
                const modal = document.getElementById('tool-modal');
                const closeBtn = document.getElementById('modal-close-btn');

                const closeModal = () => {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                    if(modalRadarChart) {
                        modalRadarChart.destroy();
                        modalRadarChart = null;
                    }
                }

                closeBtn.addEventListener('click', closeModal);
                modal.addEventListener('click', e => {
                    if (e.target === modal) {
                        closeModal();
                    }
                });
                
                document.getElementById('tool-grid').addEventListener('click', e => {
                    const card = e.target.closest('[data-tool-id]');
                    if(card) {
                        showToolModal(card.dataset.toolId);
                    }
                });
            }

            function createDashboardCharts() {
                const formFactorCtx = document.getElementById('formFactorChart').getContext('2d');
                new Chart(formFactorCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['IDE 插件', '原生AI IDE', '命令行 (CLI)'],
                        datasets: [{
                            data: [6, 4, 2],
                            backgroundColor: ['#FBBF24', '#F59E0B', '#D97706'],
                            borderColor: '#F5F5F4',
                            hoverOffset: 4
                        }]
                    },
                    options: commonChartOptions
                });

                const pricingModelCtx = document.getElementById('pricingModelChart').getContext('2d');
                new Chart(pricingModelCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['分级订阅/信用点', '自带密钥 (BYOK)', '固定订阅'],
                        datasets: [{
                            data: [5, 4, 3],
                            backgroundColor: ['#A16207', '#78350F', '#451A03'],
                            borderColor: '#F5F5F4',
                            hoverOffset: 4
                        }]
                    },
                    options: commonChartOptions
                });
            }

            document.addEventListener('DOMContentLoaded', () => {
                renderTools();
                setupFilters();
                setupModal();
                createDashboardCharts();
                
                document.querySelector('[data-filter-group="role"] [data-filter="all"]').classList.add('active');
                document.querySelector('[data-filter-group="priority"] [data-filter="all"]').classList.add('active');
                document.querySelector('[data-filter-group="form_factor"] [data-filter="all"]').classList.add('active');
            });
        </script>
    </div>
</Layout>
