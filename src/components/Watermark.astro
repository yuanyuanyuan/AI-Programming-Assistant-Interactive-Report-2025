---
const githubUser = "yuanyuanyuan";
const qrcodeSrc = import.meta.env.BASE_URL + "qrcode.jpg";
---
<div class="watermark">
    <p>About: Stark Yuan</p>
    <a href={`https://github.com/${githubUser}`} target="_blank" rel="noopener noreferrer">
        GitHub Profile
    </a>
    <img src={qrcodeSrc} alt="QR Code" />
</div>

<style>
    .watermark {
        position: fixed;
        bottom: 20px;
        right: 20px;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        z-index: 1000;
        text-align: center;
        font-family: sans-serif;
        font-size: 14px;
    }
    .watermark img {
        width: 100px;
        height: 100px;
        margin-top: 10px;
    }
    .watermark p, .watermark a {
        margin: 0;
        padding: 2px 0;
    }
</style> 